<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.MainActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:id="@+id/contentMain">


    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txtOla"
                tools:text="Olá, Fulano!"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_marginLeft="90dp"
                android:text="Como está se sentindo hoje?"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <View
            android:background="@drawable/ic_sentiment_very_dissatisfied_black_24dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@drawable/ic_sentiment_dissatisfied_black_24dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@drawable/ic_sentiment_neutral_black_24dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@drawable/ic_sentiment_satisfied_black_24dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@drawable/ic_sentiment_very_satisfied_black_24dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/homeDiario"
            android:text="Caso sinta-se à vontade, escreva em seu diário."
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>