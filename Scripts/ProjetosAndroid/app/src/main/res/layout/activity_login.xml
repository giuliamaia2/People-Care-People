<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:id="@+id/activityLoginFundo">
<ImageView
    android:id="@+id/loginLogo"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/activityLogin_edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Email"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        android:importantForAutofill="no"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/activityLogin_edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@android:color/white"
        android:importantForAutofill="no"/>
    
    <info.hoang8f.widget.FButton
        android:layout_centerHorizontal="true"
        android:id="@+id/activityLogin_btnLogin"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:textSize="18sp"
        android:text="Entrar"
        android:textColor="@android:color/white"
        app:cornerRadius="30dp"
        app:fButtonColor="@android:color/holo_green_dark"
        app:shadowEnabled="false"/>

    <TextView
        android:id="@+id/activityLogin_txtCadastro"
        android:text="NÃ£o possui uma conta? Cadastre-se aqui!"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>